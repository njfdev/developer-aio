<article>

    {{#if feature_image}}
        <a href="{{url}}">
            <img 
                src="{{img_url feature_image}}" 
                alt="{{#if feature_image_alt}}{{feature_image_alt}}{{else}}{{title}}{{/if}}" 
                loading="lazy"
                />
        </a>
    {{/if}}

    {{#primary_tag}}
        <span>{{name}}</span>
    {{/primary_tag}}
    {{#if featured}}
        <span>Featured</span>
    {{/if}}

    <a href="{{url}}">
        <h1>{{title}}</h1>
        <p>{{excerpt}}</p>
    </a>

    {{#if reading_time}}
        <span>~{{reading_time}}</span>
    {{/if}}
    {{#if @site.comments_enabled}}
        {{comment_count}}
    {{/if}}
</article>